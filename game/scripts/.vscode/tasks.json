    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile TypeScript to Lua",
            "type": "shell",
            "command": "tstl -p tsconfig.json",
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Compile TypeScript to Lua - Watch",
            "type": "shell",
            "command": "tstl -p tsconfig.json --watch",
            "group": {
                "kind": "build"
            }
        }
    ]
}